<p id="notice"><%= notice %></p>

<h1>Articles</h1>

<%= cl_image_tag("k2j7ipz5jw67x9eljz3h",
      width: 150, height: 150, crop: :thumb, gravity: :face, radius: 100 ) %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= cl_image_tag "#{article.photo.key}", alt: "San Francisco", widht: 400, height: 300, crop: :fill %></td>
        <td><%= article.title %></td>
        <td><%= article.body %></td>
        <td><%= link_to 'Show', article %></td>
        <td><%= link_to 'Edit', edit_article_path(article) %></td>
        <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Article', new_article_path %>
